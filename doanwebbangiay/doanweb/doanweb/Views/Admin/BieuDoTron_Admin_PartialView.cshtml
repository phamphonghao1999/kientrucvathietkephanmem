<div class="chart-pie pt-4 pb-2">
    <input value="@ViewBag.BieuDoTronA_slsp1" type="button" id="sp1" style="display:none;" class="@ViewBag.BieuDoTronA_sp1" />
    <input value="@ViewBag.BieuDoTronA_slsp2" type="button" id="sp2" style="display:none;" class="@ViewBag.BieuDoTronA_sp2" />
    <input value="@ViewBag.BieuDoTronA_slsp3" type="button" id="sp3" style="display:none;" class="@ViewBag.BieuDoTronA_sp3" />
    <input value="@ViewBag.BieuDoTronA_slspcl" type="button" id="sp4" style="display:none;" />
    <canvas id="myPieChart"></canvas>
</div>
<div class="mt-4 text-left small">
    @if (ViewBag.BieuDoTronA_sp1!="")
    {
        
        <span class="mr-2">
            <i class="fas fa-circle text-primary"></i>
            @ViewBag.BieuDoTronA_sp1
        </span>
        <br />
    }
    @if (ViewBag.BieuDoTronA_sp2!="")
    {
        
        <span class="mr-2">
            <i class="fas fa-circle text-success"></i>
            @ViewBag.BieuDoTronA_sp2
        </span>
        <br />
    }
    @if (ViewBag.BieuDoTronA_sp3!="")
    {
        
        <span class="mr-2">
            <i class="fas fa-circle text-info"></i>
            @ViewBag.BieuDoTronA_sp3
        </span>
        <br />
    }
    @if(ViewBag.BieuDoTronA_slspcl!=0)
    {
        
        <span class="mr-2">
            <i class="fas fa-circle text-danger"></i> Sản Phẩm Khác
        </span>
    }
</div>